<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Change your Password
        </h1>
        <%- include('./partials/messages') %>
        <%= typeof msg != 'undefined' ? msg : '' %>
        <form action="/users/passwd" method="POST">
          <div class="form-group">
            <label for="name">Username</label>
            <input
              type="username"
              id="username"
              name="username"
              class="form-control"
              placeholder="Enter Username"
              value="<%= user %>"
              required
              disabled="disabled"
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter New Password"
              value=""
              required
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm New Password"
              value=""
              required
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Change Password
          </button>
        </form>
        
      </div>
    </div>